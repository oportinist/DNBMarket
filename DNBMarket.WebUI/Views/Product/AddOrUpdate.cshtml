@model Product
@{
    ViewData["Title"] = "Ürün ekleme";
}

<div class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Ürün Bilgileri</h3>
        <div class="card-tools">
            <a href="/@ControllerName/Index" class="btn btn-primary btn-sm"><i class="fa fa-mail-reply"></i> Geri</a>
        </div>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form action="/@ControllerName/AddOrUpdate" method="post">
        <div class="card-body">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Ürün Adı" asp-for="@Model.Name">
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="form-group">
                    <label for="" class="red">@ViewBag.Message</label>
                </div>
            }
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <input type="text" class="form-control" asp-for="@Model.UnitPrice" placeholder="Birim Fiyatı (₺)">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Stok Miktarı" asp-for="@Model.UnitsInStock">
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Ürün Kapak Fotoğrafı</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" asp-for="@Model.CoverImage">
                        <label class="custom-file-label" for="exampleInputFile">Dosya Seç(.jpg,.png,.jpeg)</label>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-success btn-sm">Kaydet</button>
        </div>
    </form>
</div>